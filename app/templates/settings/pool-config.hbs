<div class="pool-config-container list-group-item">
    <div class="row">
        <div class="col-md-1">
            {{view 'elements.switch' checked=pool.enabled}}
        </div>
        <div class="col-md-2">{{input type='text' class='form-control' value=pool.name placeholder='Pool name'}}</div>
        <div class="col-md-3">{{input type='text' class='form-control' value=pool.url placeholder='Url'}}</div>
        <div class="col-md-3">{{input type='text' class='form-control' value=pool.username placeholder='username'}}</div>
        <div class="col-md-3">{{input type='text' class='form-control' value=pool.password placeholder='password'}}</div>
    </div>
</div>