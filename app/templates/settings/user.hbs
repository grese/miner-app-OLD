<div class="row">
    <hr/>
    <div class="col-md-12">
        <h3>Edit User: <span class="italic">{{model.user.username}}</h3>
        <div class="col-md-6">
            <div class="row">
                <form id="edit-user-form" {{action 'save' model.user on='submit'}}>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Username:</label>
                                {{input class='form-control' value=model.user.username name='username'}}
                            </div>
                            <div class="col-md-6">
                                <label>Password:</label><label class="error"></label>
                                {{input type='password' class='form-control' value=model.user.password name='password'}}
                                <label>Confirm Password:</label>
                                {{input type='password' class='form-control password-conf' name='passwordConf'}}
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fa fa-save fa-lg save-icon"></i>&nbsp;&nbsp;Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>