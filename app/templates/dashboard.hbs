<article id="dashboard">
    <header id="dashboard-header" class="row">
        <div class="col-md-12 dashboard-title-container">
            <h1 class="dashboard-title">Dashboard</h1>
            <div class="pull-right dashboard-speed-metric-container btn-group">
                <label>Show Speed As:</label><br/>
                <button {{action 'setDashToMH'}} type="button" class="btn btn-default btn-xs active">Mh/s</button>
                <button {{action 'setDashToGH'}} type="button" class="btn btn-default btn-xs">Gh/s</button>
            </div>
        </div>
    </header>
    <section id="dashboard-summary-container">
        <h3>Summary</h3>
        <div class="dashboard-summary">
            <div class="elapsedTime dashboard-summary-item">
                <div class="summary-item-value">
                    {{format-elapsed-time model.summary.Elapsed}}
                </div>
                <label class="summary-item-title">Elapsed Time</label>
            </div>
            <div class="mhsAv dashboard-summary-item">
                <div class="summary-item-value">
                    {{format-decimal model.summary.getMHsAv}}
                </div>
                <label class="summary-item-title">Avg Mh/s</label>
            </div>
            <div class="totalMhs dashboard-summary-item">
                <div class="summary-item-value">
                    {{format-decimal model.summary.getTotalMH}}
                </div>
                <label class="summary-item-title">Total Mh</label>
            </div>
        </div>
    </section>
    <section class="dashboard-analytics-container">
        {{line-graph}}
    </section>
    <section class="dashboard-miners-table-container">
        {{render 'miners.list' model.miners}}
    </section>
</article>